# 西联智能平台 - 本地开发环境配置
# 复制此文件为 .env.local: cp .env.local.template .env.local
# 然后运行: pnpm dev:local

# ============================================================
# 基础配置
# ============================================================

# 运行环境
NODE_ENV=development

# 应用端口
PORT=3000

# ============================================================
# 数据库配置
# ============================================================

# MySQL/TiDB 连接字符串
DATABASE_URL=mysql://xilian:xilian123@localhost:3306/xilian

# ============================================================
# OAuth 配置（本地开发模式）
# ============================================================

# OAuth 服务器地址（本地开发可使用应用地址）
OAUTH_SERVER_URL=http://localhost:3000

# OAuth 应用 ID
VITE_APP_ID=local-dev

# OAuth 门户地址
VITE_OAUTH_PORTAL_URL=http://localhost:3000

# ============================================================
# Kafka 配置
# ============================================================

# Kafka Broker 地址（多个地址用逗号分隔）
KAFKA_BROKERS=localhost:9092

# Kafka 客户端 ID
KAFKA_CLIENT_ID=xilian-platform

# Kafka 消费者组 ID
KAFKA_GROUP_ID=xilian-consumer-group

# ============================================================
# Redis 配置
# ============================================================

# Redis 主机地址
REDIS_HOST=localhost

# Redis 端口
REDIS_PORT=6379

# Redis 数据库索引（0-15）
REDIS_DB=0

# Redis 密码（如果设置了密码，取消注释并填写）
# REDIS_PASSWORD=your_password

# ============================================================
# Ollama 配置（本地 AI 模型）
# ============================================================

# Ollama 服务地址
OLLAMA_HOST=http://localhost:11434

# 默认模型
OLLAMA_MODEL=llama3.1:70b

# ============================================================
# Qdrant 向量数据库配置
# ============================================================

# Qdrant 服务地址
QDRANT_HOST=http://localhost:6333

# ============================================================
# 日志配置
# ============================================================

# 日志级别: debug, info, warn, error
LOG_LEVEL=info

# 是否启用详细日志
DEBUG=false

# ============================================================
# Analytics 配置（可选）
# ============================================================

# Umami Analytics 端点（留空则禁用）
VITE_ANALYTICS_ENDPOINT=

# Umami 网站 ID（留空则禁用）
VITE_ANALYTICS_WEBSITE_ID=

# ============================================================
# 本地开发模式
# ============================================================

# 跳过认证（本地开发时设为 true）
SKIP_AUTH=true
