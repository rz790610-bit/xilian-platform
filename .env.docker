# ============================================================
# PortAI Nexus — Docker 部署环境变量
# ============================================================
# 复制此文件为 .env 后修改，docker compose 会自动加载
# cp .env.docker .env
# ============================================================

# ── 应用基础 ──
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
SKIP_AUTH=true

# ── MySQL ──
MYSQL_ROOT_PASSWORD=root123
MYSQL_USER=portai
MYSQL_PASSWORD=portai123

# ── ClickHouse ──
CLICKHOUSE_PASSWORD=

# ── MinIO ──
MINIO_ACCESS_KEY=portai
MINIO_SECRET_KEY=portai123456

# ── Neo4j ──
NEO4J_USER=neo4j
NEO4J_PASSWORD=portai123

# ── Kafka ──
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk

# ── 安全配置 ──
JWT_SECRET=xilian-portai-nexus-docker-deploy-secret-2026
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ── Grok / XAI（可选，留空则降级到 Ollama） ──
FEATURE_GROK_ENABLED=false
XAI_API_URL=https://api.x.ai
XAI_API_KEY=
XAI_MODEL=grok-4-0709
XAI_TIMEOUT=60000
XAI_TEMPERATURE=0.2
XAI_FALLBACK_OLLAMA=true

# ── Ollama（可选） ──
OLLAMA_MODEL=llama3.1:70b

# ── Vault ──
VAULT_DEV_TOKEN=xilian-dev-root-token

# ── 可选服务开关 ──
FEATURE_ELASTICSEARCH_ENABLED=false
FEATURE_KAFKA_CONNECT_ENABLED=false
FEATURE_AIRFLOW_ENABLED=false
FEATURE_FLINK_ENABLED=false

# ── 监控 ──
GRAFANA_ADMIN_PASSWORD=admin
